<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Demande2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorbg"
        android:foregroundGravity="center"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        app:buttonGravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="          Envoyer une demande"
        app:titleTextColor="@color/common_google_signin_btn_text_dark_default" />

    <ImageView
        android:id="@+id/flesh"
        android:layout_width="32dp"
        android:layout_height="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/flesh_icon"
        tools:ignore="VectorDrawableCompat" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="571dp"
        android:layout_marginTop="60sp"
        android:layout_marginBottom="100sp"
        android:orientation="vertical"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="57dp"

            android:gravity="start|center_horizontal"
            android:paddingLeft="40sp"
            android:text="Remplir votre demande"
            android:textColor="@color/colorHeader"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t11"
            android:layout_width="316dp"
            android:layout_height="30dp"

            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="Horaire de travail"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t13"
                android:layout_width="207dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="select horaire ..."
                android:textColor="@color/color3"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/ajout1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_add_box_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t15"
                android:layout_width="206dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="tu peut choisir autre date"
                android:textColor="@color/color3"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/ajout2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_add_box_black_24dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/T3"
                    android:layout_width="316dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"

                    android:layout_weight="1"
                    android:text="Type "
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/styleedit"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/typeS"
                    android:layout_width="284dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40px"

                    android:layout_weight="1"
                    android:gravity="bottom|center"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/autre"
                    android:layout_width="302dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"

                    android:ems="10"
                    android:hint="Autre"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="Urgence de panne"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGoup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp">

                    <RadioButton
                        android:id="@+id/passable"
                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:text="etat passable"
                        android:textColor="@color/colorvert" />

                    <RadioButton
                        android:id="@+id/medium"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:text="etat mÃ©dium"
                        android:textColor="@color/colororange" />

                    <RadioButton
                        android:id="@+id/urgent"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:text="etat urgent"
                        android:textColor="@color/colorrouge" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/envoyer"
                android:layout_width="156dp"
                android:layout_height="124dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/stylebuttonoranger"
                android:gravity="center"
                android:text="Envoyer"
                android:textColor="@color/colorbg"
                android:textSize="16sp"
                tools:ignore="InvalidId" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>